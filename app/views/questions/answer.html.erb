<div class="container">
  <h1 class="text-center my-4">Stupid Coaching</h1>

  <% if params[:question] == "I am going to work" %>
    <p class="text-success">Great!</p>
  <% elsif params[:question].include?("?") %>
    <p class="text-warning">Silly question, get dressed and go to work!</p>
  <% else %>
    <p class="text-danger">I don't care, get dressed and go to work!</p>
  <% end %>

  <%= link_to "Ask another question", ask_path, class: "btn btn-primary mt-3" %>
</div>
